      // Convert to RGBA and apply opacity
      let teamColorWithOpacity = hexToRGBA(teamColor, 0.5); // 50% opacity

      // Set the background color
      return (todos.innerHTML += `
        <div id="todo-${x.id}" style="background-color: ${teamColorWithOpacity};">
          <span class="fw-bold fs-4">${x.title}</span>
          <pre class="gender-text">${x.gender} ${x.description}</pre>
